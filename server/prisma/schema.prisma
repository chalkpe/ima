generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  host String @id
  guest String
  hostReady Boolean @default(false)
  guestReady Boolean @default(false)
  started Boolean @default(false)

  /// [RoomState]
  state Json
}

model User {
  id String @id
  displayName String
  username String
  token String
  tokenSecret String
}
