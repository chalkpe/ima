generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FediverseApp {
  domain       String @id
  clientId     String
  clientSecret String
}

enum Theme {
  AUTO
  LIGHT
  DARK
}

enum RiichiStick {
  RED
  BLUE
}

model UserPreference {
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  theme       Theme       @default(AUTO)
  riichiStick RiichiStick @default(RED)
}

model User {
  id String @id

  username    String
  displayName String

  nickname   String?
  preference UserPreference?

  token       String
  tokenSecret String

  hostRoom  Room? @relation(name: "hostUser")
  guestRoom Room? @relation(name: "guestUser")
}

enum PlayerType {
  HOST
  GUEST
}

model Room {
  host      String  @id
  hostReady Boolean @default(false)
  hostUser  User?   @relation(fields: [host], references: [id], name: "hostUser")

  guest      String? @unique
  guestReady Boolean @default(false)
  guestUser  User?   @relation(fields: [guest], references: [id], name: "guestUser")

  started   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stopRequestedBy     PlayerType?
  remainingTimeToStop Int?

  /// [RoomState]
  state Json
}
